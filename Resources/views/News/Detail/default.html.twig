{{ loadAsset('@JarvesPublicationBundle/news/detail/default.css') }}

{% if categoryTitle is defined %}
    <h3 style="text-align: center; color: gray">All in category <i>{{ categoryTitle }}</i></h3>
{% endif %}

<div class="jarves-publication">
    {% block item %}
        <div class="jarves-publication-item">

            <h2><a href="{{ options.detailPage|url }}/{{ item.uri }}">{{ item.title }}</a></h2>

            <div class="jarves-publication-item-intro">
                {% if item.introimage %}
                    <img src="{{ item.introimage }}" class="jarves-publication-item-intro-image"/>
                {% endif %}
                {{ item.intro | raw }}
                <div style="clear: both;"></div>
            </div>

            <div class="jarves-publication-item-content">
                {{ item.contents | renderContents }}
            </div>

            <div class="jarves-publication-item-bottom">
                <span class="jarves-publication-item-date">{{ item.newsDate|date("F d, Y") }}</span>
                - <a href="{{ currentUrl() }}/category/{{ item.Category.uri }}">{{ item.Category.title }}</a>
                {% if item.tags %}
                    {% trans %}with tags{% endtrans %} <span>{{ item.tags }}</span>
                {% endif %}

                <a href="{{ options.detailPage|url }}/{{ item.uri }}">{% trans %}read more{% endtrans %}</a>

            </div>
        </div>
    {% endblock %}
</div>